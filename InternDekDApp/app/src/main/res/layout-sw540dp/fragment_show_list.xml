<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dekd.intern.bosstanayot.interndekd.view.ShowListFragment">
    <ImageView
        android:id="@+id/imgInList"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/titleInList"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/imgInList"
        android:text="Title"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="55dp"/>
    <TextView
        android:id="@+id/messageInList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleInList"
        android:text="fffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
        android:textSize="35dp"/>

    <ProgressBar
        android:id="@+id/progressInlist"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
</ScrollView>